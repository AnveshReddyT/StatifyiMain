<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dialpad_contact_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#30CFCFCF"
        android:padding="10dp">

        <statifyi.com.statifyi.widget.TextView
            android:id="@+id/dialpad_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/dialer_alphabets" />

        <RelativeLayout
            android:id="@+id/dialpad_status_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/dialpad_more_contacts"
            android:background="@drawable/bg_rectangle_rounded_green"
            android:visibility="gone">

            <ImageView
                android:id="@+id/dialpad_status_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignBottom="@+id/dialpad_status"
                android:layout_alignTop="@+id/dialpad_status"
                android:layout_centerVertical="true"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_status" />

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/dialpad_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/dialpad_status_icon"
                android:gravity="center"
                android:text="DRIVING"
                android:textColor="@color/accentColor"
                android:textSize="9sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/dialpad_more_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@android:drawable/ic_menu_more"
            android:visibility="invisible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/dialpad_divider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

        <LinearLayout
            android:id="@+id/dialpad_1_layout"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="horizontal">

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/dialpad_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/accentColor"
                android:textSize="24sp"
                app:fontStyle="Light" />

            <statifyi.com.statifyi.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/dialer_alphabets"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

        <LinearLayout
            android:id="@+id/dialpad_2_layout"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="horizontal">

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/dialpad_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/accentColor"
                android:textSize="24sp"
                app:fontStyle="Light" />

            <statifyi.com.statifyi.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="ABC"
                android:textColor="@color/dialer_alphabets"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

        <LinearLayout
            android:id="@+id/dialpad_3_layout"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="horizontal">

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/dialpad_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/accentColor"
                android:textSize="24sp"
                app:fontStyle="Light" />

            <statifyi.com.statifyi.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="DEF"
                android:textColor="@color/dialer_alphabets"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/dialpad_divider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

        <LinearLayout
            android:id="@+id/dialpad_4_layout"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="horizontal">

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/dialpad_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/accentColor"
                android:textSize="24sp"
                app:fontStyle="Light" />

            <statifyi.com.statifyi.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="GHI"
                android:textColor="@color/dialer_alphabets"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

        <LinearLayout
            android:id="@+id/dialpad_5_layout"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="horizontal">

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/dialpad_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/accentColor"
                android:textSize="24sp"
                app:fontStyle="Light" />

            <statifyi.com.statifyi.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="JKL"
                android:textColor="@color/dialer_alphabets"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

        <LinearLayout
            android:id="@+id/dialpad_6_layout"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="horizontal">

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/dialpad_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="@color/accentColor"
                android:textSize="24sp"
                app:fontStyle="Light" />

            <statifyi.com.statifyi.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="MNO"
                android:textColor="@color/dialer_alphabets"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/dialpad_divider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

        <LinearLayout
            android:id="@+id/dialpad_7_layout"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="horizontal">

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/dialpad_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textColor="@color/accentColor"
                android:textSize="24sp"
                app:fontStyle="Light" />

            <statifyi.com.statifyi.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="PQRS"
                android:textColor="@color/dialer_alphabets"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

        <LinearLayout
            android:id="@+id/dialpad_8_layout"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="horizontal">

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/dialpad_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColor="@color/accentColor"
                android:textSize="24sp"
                app:fontStyle="Light" />

            <statifyi.com.statifyi.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="TUV"
                android:textColor="@color/dialer_alphabets"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

        <LinearLayout
            android:id="@+id/dialpad_9_layout"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="horizontal">

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/dialpad_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="@color/accentColor"
                android:textSize="24sp"
                app:fontStyle="Light" />

            <statifyi.com.statifyi.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="WXYZ"
                android:textColor="@color/dialer_alphabets"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/dialpad_divider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

        <LinearLayout
            android:id="@+id/dialpad_hash_layout"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="horizontal">

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/dialpad_hash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:textColor="@color/accentColor"
                android:textSize="24sp"
                app:fontStyle="Light" />

        </LinearLayout>

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

        <LinearLayout
            android:id="@+id/dialpad_0_layout"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="horizontal">

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/dialpad_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/accentColor"
                android:textSize="24sp"
                app:fontStyle="Light" />

            <statifyi.com.statifyi.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="+"
                android:textColor="@color/dialer_alphabets"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

        <LinearLayout
            android:id="@+id/dialpad_star_layout"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="horizontal">

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/dialpad_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/accentColor"
                android:textSize="24sp"
                app:fontStyle="Light" />

        </LinearLayout>

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/dialpad_divider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

        <LinearLayout
            android:id="@+id/dialpad_message_layout"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialpad_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dial_message" />

        </LinearLayout>

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

        <LinearLayout
            android:id="@+id/dialpad_call_layout"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialpad_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dial_call" />

        </LinearLayout>

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

        <LinearLayout
            android:id="@+id/dialpad_delete_layout"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialpad_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dial_delete" />

        </LinearLayout>

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/dialpad_divider" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/dialpad_divider" />

</LinearLayout>