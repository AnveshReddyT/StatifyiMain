<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:clipToPadding="true"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#30CCCCCC"
            android:padding="10dp">

            <ImageView
                android:id="@+id/timely_status_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/timely_status_item_name"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/timely_status_item_name"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/sleeping" />

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/timely_status_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toLeftOf="@+id/timely_status_item_switch"
                android:layout_toRightOf="@+id/timely_status_item_icon"
                android:text="Daily DND"
                android:textColor="@color/primaryColorDark" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/timely_status_item_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:enabled="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timely_status_item_start_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start time"
                    android:textSize="10sp" />

                <statifyi.com.statifyi.widget.TextView
                    android:id="@+id/timely_status_item_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="   -   " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timely_status_item_end_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End time"
                    android:textSize="10sp" />

                <statifyi.com.statifyi.widget.TextView
                    android:id="@+id/timely_status_item_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="   -   " />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>