<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:mrl_rippleAlpha="0.2"
    app:mrl_rippleColor="@color/accentColor"
    app:mrl_rippleDimension="10dp"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/status_grid_item_left_divider"
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/divider_status_grid" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/status_grid_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:src="@android:drawable/ic_lock_silent_mode" />

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/status_grid_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="STATUS"
                android:textSize="10sp" />

            <View
                android:id="@+id/status_grid_item_bottom_divider"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/divider_status_grid" />

        </LinearLayout>
    </LinearLayout>

</com.balysv.materialripple.MaterialRippleLayout>