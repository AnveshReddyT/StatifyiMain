<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/calllog_list_item_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="visible"
        app:border="false"
        app:shadow="false" />

    <statifyi.com.statifyi.widget.TextView
        android:id="@+id/calllog_list_item_alphabet"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_circle_gray_fill"
        android:gravity="center"
        android:text="K"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/calllog_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Krishna Teja"
                android:textSize="14sp" />

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/calllog_list_item_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="+919676316323"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/calllog_list_item_status_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rectangle_rounded_green">

                <ImageView
                    android:id="@+id/calllog_list_item_status_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignBottom="@+id/calllog_list_item_status"
                    android:layout_alignParentLeft="true"
                    android:layout_alignTop="@+id/calllog_list_item_status"
                    android:layout_centerVertical="true"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_status" />

                <statifyi.com.statifyi.widget.TextView
                    android:id="@+id/calllog_list_item_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/calllog_list_item_status_icon"
                    android:gravity="center"
                    android:text="DRIVING"
                    android:textColor="@color/accentColor"
                    android:textSize="9sp" />

            </RelativeLayout>

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/calllog_list_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:text="24m ago"
                android:textSize="8sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/list_divider" />

    </RelativeLayout>

</LinearLayout>