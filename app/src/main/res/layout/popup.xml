<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    card_view:cardCornerRadius="4dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/accentColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/popup_status_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_circle_green"
            android:scaleType="centerInside"
            android:src="@drawable/driving" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/popup_status_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/please_wait"
                android:textColor="@color/black" />

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/popup_status_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="updated 10h 22m ago"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/popup_status_menu"
        android:layout_width="32dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:scaleType="center"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@drawable/ic_popup_menu" />

</android.support.v7.widget.CardView>