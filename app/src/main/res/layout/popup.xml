<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/popup_status_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/popup_status_avatar_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/popup_status_avatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/avatar"
                card_view:border="false"
                card_view:shadow="false" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/popup_message_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/popup_status_avatar_layout"
            android:layout_alignTop="@+id/popup_status_avatar_layout"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/popup_status_icon_layout"
            android:layout_toRightOf="@+id/popup_status_avatar_layout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/popup_copyright_layout"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:orientation="vertical">

                <statifyi.com.statifyi.widget.TextView
                    android:id="@+id/popup_status_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/please_wait"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <statifyi.com.statifyi.widget.TextView
                    android:id="@+id/popup_status_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="10sp"
                    app:fontStyle="Italic" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/popup_copyright_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="2dp"
                android:paddingTop="4dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/popup_status_menu_icon"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/popup_status_logo"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/popup_copyright"
                    android:src="@drawable/ic_launcher" />

                <statifyi.com.statifyi.widget.TextView
                    android:id="@+id/popup_copyright"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:text="@string/app_name"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="10sp"
                    app:fontStyle="Italic" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/popup_status_icon_layout"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/popup_message_layout"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/accentColor"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/popup_status_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/driving" />

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/popup_status_menu"
        android:layout_width="16dp"
        android:layout_height="24dp"
        android:layout_gravity="right"
        android:scaleType="center"
        android:src="@drawable/ic_popup_menu"
        android:visibility="visible" />

    <TextView
        android:id="@+id/popup_status_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone" />

</FrameLayout>