<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/popup_status_layout"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/popup_status_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/avatar"
            card_view:border="false"
            card_view:shadow="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/popup_status_icon_layout"
            android:layout_toRightOf="@+id/popup_status_avatar"
            android:gravity="center"
            android:orientation="vertical">

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/popup_status_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/please_wait"
                android:textColor="@color/black" />

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/popup_status_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/popup_status_icon_layout"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/accentColor"
            android:gravity="center">

            <ImageView
                android:id="@+id/popup_status_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/driving" />

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/popup_status_menu"
        android:layout_width="16dp"
        android:layout_height="32dp"
        android:layout_gravity="right"
        android:scaleType="center"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@drawable/ic_popup_menu" />

</android.support.v7.widget.CardView>