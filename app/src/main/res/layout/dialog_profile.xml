<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <statifyi.com.statifyi.widget.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accentColor"
        android:gravity="center"
        android:padding="16dp"
        android:text="PROFILE"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/custom_call_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="48dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_avatar"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerInParent="true"
            android:src="@drawable/avatar"
            app:border_width="1dp"
            app:shadow="false" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <statifyi.com.statifyi.widget.EditText
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:hint="@string/hint_name"
            android:textColor="@color/primaryColorDark" />

        <statifyi.com.statifyi.widget.TextView
            android:id="@+id/profile_update_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_rectangle_rounded_fill_green"
            android:paddingBottom="8dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="8dp"
            android:text="UPDATE"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>