<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="statifyi.com.statifyi.fragment.StatusFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center_vertical">

        <statifyi.com.statifyi.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/status_add_text_layout"
            android:layout_alignLeft="@+id/status_add_text_layout"
            android:layout_alignRight="@+id/status_add_text_layout"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="ADD STATUS"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/status_add_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_circle"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/add_status" />

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/status_add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="ADD"
                android:textSize="10sp" />

        </LinearLayout>

        <statifyi.com.statifyi.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/status_current_text_layout"
            android:layout_alignLeft="@+id/status_current_text_layout"
            android:layout_alignRight="@+id/status_current_text_layout"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="CURRENT STATUS"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/status_current_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/status_add_text_layout"
            android:background="@drawable/bg_circle"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/status_current_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/driving" />

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/status_current_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="DRIVING"
                android:textSize="10sp" />

        </LinearLayout>

        <statifyi.com.statifyi.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/status_auto_text_layout"
            android:layout_alignLeft="@+id/status_auto_text_layout"
            android:layout_alignRight="@+id/status_auto_text_layout"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="AUTO STATUS"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/status_auto_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/status_current_text_layout"
            android:background="@drawable/bg_circle"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/status_auto_text_checkbox"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@drawable/radio_auto_status" />

            <statifyi.com.statifyi.widget.TextView
                android:id="@+id/status_auto_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="ON"
                android:textSize="10sp" />

        </LinearLayout>


    </RelativeLayout>

    <GridView
        android:id="@+id/status_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:numColumns="3"
        android:scrollbarSize="3dp"
        android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
        android:stretchMode="columnWidth">

    </GridView>

</LinearLayout>
