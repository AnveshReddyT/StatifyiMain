<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <statifyi.com.statifyi.widget.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accentColor"
        android:gravity="center"
        android:padding="16dp"
        android:text="SET MESSAGE"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/custom_call_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="48dp">

        <ImageView
            android:id="@+id/custom_call_icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_circle"
            android:scaleType="center"
            android:src="@drawable/ic_call_custom" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <statifyi.com.statifyi.widget.EditText
            android:id="@+id/custom_call_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:hint="Custom message..."
            android:textColor="@color/primaryColorDark" />

        <statifyi.com.statifyi.widget.TextView
            android:id="@+id/custom_call_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_rectangle_rounded_fill_green"
            android:paddingBottom="8dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="8dp"
            android:text="CALL"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>